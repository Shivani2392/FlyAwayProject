import org.hibernate.cfg.Configuration;

public class SessionFactory1 {
	
	public static  SessionFactorymethod() {
//		Get a reference to the SessionFactory
		SessionFactory theFactory = new Configuration().configure("hibernate.cfg.xml")
				.addAnnotatedClass(SessionFactory1.class).buildSessionFactory();
		return null;
	}

}
